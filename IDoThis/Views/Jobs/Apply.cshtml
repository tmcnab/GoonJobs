@model dynamic
@{
    ViewBag.Title = "Job Application - " + Model.Title;
}
@section Styles {
    <link rel="stylesheet" href="/Content/css/bootstrap.wysihtml5.css" />
}
@section Scripts {
    <script type="text/javascript" src="/Scripts/ui/wysihtml5-0.3.0.js"></script>
    <script type="text/javascript" src="/Scripts/ui/bootstrap-wysihtml5.js"></script>
    <script type="text/javascript">
        $('textarea').wysihtml5({
                  "image": false,
            "font-styles": false
        });
    </script>
}


@if (ViewBag.Errors == true)
{
    <div class="alert alert-error fade in">
        <button class="close" data-dismiss="alert">&times;</button> 
        <strong>Oh snap!</strong> There was an error submitting your application. Please make sure you've completed the required fields.
    </div>    
}

<div class="alert alert-info fade in">
    <a class="close" data-dismiss="alert">&times;</a>
    <strong>Hey there!</strong> You're applying for the @Model.Title position at @Model.Who. 
    <a href="/jobs/details/@Model.Slug">Click here</a> to go back to the job listing.
</div>

<form class="form-horizontal" action="/jobs/apply/@Model.Slug" method="post">        
        <div class="control-group">
            <label class="control-label">Your Name</label>
            <div class="controls">
                <input type="text" class="span10" maxlength="100" name="full_name" placeholder="Johnny Appleseed" required="required" />
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Application Letter</label>
            <div class="controls">
                <textarea name="application_letter" class="span10" maxlength="10000" rows="20" style="resize:vertical" required="required"></textarea>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="icon-envelope icon-white"></i> Send
            </button>
        </div>
</form>